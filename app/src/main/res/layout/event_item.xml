<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/event_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:background="@drawable/rounded_item"
    android:clipToPadding="true"
    android:elevation="4dp">

    <ImageView
        android:id="@+id/event_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        />

    <TextView
        android:id="@+id/event_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/event_image"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="Title"
        android:textColor="@color/orange"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/event_creation_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/event_name"
        android:layout_marginLeft="20dp"
        android:text="Some hours ago"
        android:textColor="@color/gray"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/event_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/event_creation_date"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="bla bla bla bla bla bla bla bla bla bla"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <View
        android:id="@+id/event_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/event_summary"
        android:layout_marginTop="15dp"
        android:background="@color/lightGray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/event_line"
        android:orientation="horizontal"
        android:paddingBottom="25dp"
        >

        <ImageView
            android:id="@+id/event_image_request"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/ic_event"
            android:tint="@color/lightOrange" />

        <TextView
            android:id="@+id/event_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/event_image_request"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="30/08/2016 13:00\n30/08/2016 17:00"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/event_join"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/event_date"
            android:clickable="true"
            android:text="@string/eventJoin"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/orange"
            android:textSize="16sp" />

    </RelativeLayout>

</RelativeLayout>